    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "./src",
    "target": "ES6",
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "lib": ["ES2015"]
